<h1>Library Books</h1>
<%= link_to "Add New Book", new_book_path, class: "btn btn-primary mb-3" %>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>ISBN</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book), class: "text-decoration-none" %></td>
      <td><%= book.author %></td>
      <td><%= book.isbn %></td>
      <td><%= book.is_available ? "Available" : "Borrowed" %></td>
      <td>
        <%= link_to "Edit", edit_book_path(book), class: "btn btn-sm btn-primary" %> 
       <%= link_to "Delete", book, method: :delete, data: { turbo: "false", confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>


        <% if book.is_available %>
        <%= link_to "Borrow",  book_path(book),  class: "btn btn-success" %>
      <% else %>
        <span class="badge bg-secondary">Not Available</span>
      <% end %>
      </td>
    </tr>
  <% end %>
</table>
